{% extends "ReaderAdminBundle:Widget:layout.html.twig" %}

{% block widgetHeader %}
    <h2>Random stories</h2>
{% endblock %}

{% block widgetContent %}
    <div id="storiesRandom"></div>
    <div id="imageModalRandom" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel" aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h3 id="myModalLabel">Story preview</h3>
        </div>
        <div class="modal-body"></div>
    </div>
{% endblock %}