{% extends "ReaderAdminBundle:Widget:layout.html.twig" %}

{% block widgetHeader %}
    <i class="icon-pencil"></i><h3>Update "{{ site.title }}" site</h3>
{% endblock %}

{% block widgetContent %}
    <form id="siteForm" class="form-horizontal bindSave" action="#" method="post" {{ form_enctype(form) }} novalidate >
        {{ form_widget(form, {'form_type': 'horizontal'}) }}
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Update</button>
            <a href="{{ path('reader_admin_site') }}" class="btn btn-danger">Cancel</a>
        </div>
    </form>
{% endblock %}