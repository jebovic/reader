<h1 class="hide">{% block title %}Reader 2.0{% endblock %}</h1>
<div class="navbar navbar-fixed-top navbar-inverse" style="top: 0;">
    <div class="navbar-inner">
        <div class="container">
            <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="brand" href="{{ path( 'reader_admin_dashboard') }}">Reader <sup>2.0</sup></a>
            <div class="nav-collapse collapse">
                <ul class="nav pull-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="icon-user"></i>
                            {{app.user.username|default('anonymous')}}
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path( 'reader_admin_logout' ) }}">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div><!--/.nav-collapse -->

        </div>
    </div>
</div>
<div class="subnavbar">
    <div class="subnavbar-inner">
        <div class="container">
            <a class="btn-subnavbar collapsed" data-toggle="collapse" data-target=".subnav-collapse">
                <i class="icon-reorder"></i>
            </a>
            <div class="subnav-collapse collapse">
                <ul class="mainnav">
                    <li{% if active == 'dashboard' %} class="active"{% endif %}>
                        <a href="{{ path( 'reader_admin_dashboard') }}">
                            <i class="icon-home"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li{% if active == 'site' %} class="active"{% endif %}>
                        <a href="{{ path( 'reader_admin_site') }}">
                            <i class="icon-comments"></i>
                            <span>Sites</span>
                        </a>
                    </li>
                    <li{% if active == 'user' %} class="active"{% endif %}>
                        <a href="{{ path( 'reader_admin_user') }}">
                            <i class="icon-group"></i>
                            <span>Users</span>
                        </a>
                    </li>
                    <li>
                        <a href="{{ path( 'reader_front_homepage') }}">
                            <i class="icon-eye-open"></i>
                            <span>Public site</span>
                        </a>
                    </li>
                </ul>
                <form class="navbar-form navbar-right pull-right form-search" role="search" method="post" action="{{ path('reader_admin_search') }}">
                    <div class="input-append">
                        <input value="{{ searchText|default('') }}" type="text" class="form-control input-sm search-query" placeholder="Search" name="searchText">
                        <button type="submit" class="btn btn-primary"><i class="icon-search"></i></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>