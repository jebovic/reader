{% extends "ReaderFrontBundle::layout.html.twig" %}

{% block title %}
    {{ parent() }} - Random Fun
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="stories">
                {% for story in stories %}
                    <div class="story">
                        {% if story.image %}
                            <div class="image">
                                <a class="imageModal" href="#imageModal" data-toggle="modal" data-content="storyContent{{ story.id }}"><img src="{{ story.image|raw }}" alt="" /></a>
                            </div>
                        {% endif %}
                        <div id="storyContent{{ story.id }}" class="text{% if story.image %} withImage{% endif %}">
                            {% if story.title %}
                                <p><strong>{{ story.title|raw }}</strong></p>
                            {% endif %}
                            <p>{{ story.text|raw }}</p>
                        </div>
                        {% if story.image %}
                            <div class="clearfix"></div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    {{ parent() }}
{% endblock %}